@model IEnumerable<LoaiBangLai>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="p-4 bg-light rounded shadow-sm d-flex align-items-center">
                <!-- Nội dung văn bản -->
                <div class="flex-grow-1">
                    <h2 class="fw-bold text-primary">Thi Sa Hình</h2>
                    <h3 class="text-dark">XE MÁY, Ô TÔ</h3>
                    <p class="mt-3 text-muted">
                        Bài thi sa hình xe máy và 11 bài thi sa hình B1, B2 hoặc 10 bài thi sa hình hạng C giúp học viên nắm vững kiến thức trước khi thi.
                    </p>
                </div>
                <!-- Hình ảnh -->
                <div class="ms-3">
                    <img src="~/images/car-driving.png" class="img-fluid" alt="Thi Sa Hình" style="max-width: 150px;">
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        @foreach (var loai in Model)
        {
            <div class="col-md-4">
                <a href="@Url.Action("DanhSachBaiHoc", "BaiSaHinh", new { loaiBangLaiId = loai.Id })" class="text-decoration-none">
                    <div class="card shadow-sm border-0">
                        <div class="card-body text-center">
                            <h5 class="card-title text-dark">@loai.TenLoai</h5>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>
