@model List<OnThiLaiXe.Models.LoaiBangLai>

@{
    ViewData["Title"] = "Danh sách bằng lái ô tô";
}

<div class="container mt-4">
    <h2 class="mb-4">Danh sách bằng lái ô tô</h2>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var loaiBangLai in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-header bg-info text-white">
                            <h5 class="card-title mb-0">@loaiBangLai.TenLoai</h5>
                        </div>
                        <div class="card-body">
                            <p><strong>Loại xe:</strong> @loaiBangLai.LoaiXe</p>
                            <p><strong>Mô tả:</strong> @loaiBangLai.MoTa</p>
                            <div class="d-flex justify-content-between mt-3">
                                <a href="@Url.Action("OnTap", "BaiThi", new { loaiBangLaiId = loaiBangLai.Id })" class="btn btn-success">
                                    <i class="fas fa-book"></i> Ôn tập
                                </a>
                                <a href="@Url.Action("ThiDe", "BaiThi", new { loaiBangLaiId = loaiBangLai.Id })" class="btn btn-danger">
                                    <i class="fas fa-file-alt"></i> Thi đề
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            Không có dữ liệu bằng lái ô tô.
        </div>
    }
</div>