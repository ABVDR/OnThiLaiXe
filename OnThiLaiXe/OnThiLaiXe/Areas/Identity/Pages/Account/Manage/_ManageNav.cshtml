@inject SignInManager<ApplicationUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<div class="card shadow-sm border-0 rounded-3">
    <div class="card-body p-3">
        <h5 class="mb-3 text-primary fw-bold"><i class="bi bi-gear-fill me-2"></i> Quản lý tài khoản</h5>
        <ul class="nav flex-column gap-2">
            <li>
                <a class="nav-link px-3 py-2 rounded @ManageNavPages.IndexNavClass(ViewContext) text-dark d-flex align-items-center"
                   asp-page="./Index">
                    <i class="bi bi-person-circle me-2"></i> Hồ sơ cá nhân
                </a>
            </li>
            <li>
                <a class="nav-link px-3 py-2 rounded @ManageNavPages.EmailNavClass(ViewContext) text-dark d-flex align-items-center"
                   asp-page="./Email">
                    <i class="bi bi-envelope-at-fill me-2"></i> Email
                </a>
            </li>
            <li>
                <a class="nav-link px-3 py-2 rounded @ManageNavPages.ChangePasswordNavClass(ViewContext) text-dark d-flex align-items-center"
                   asp-page="./ChangePassword">
                    <i class="bi bi-key-fill me-2"></i> Mật khẩu
                </a>
            </li>
            @if (hasExternalLogins)
            {
                <li>
                    <a class="nav-link px-3 py-2 rounded @ManageNavPages.ExternalLoginsNavClass(ViewContext) text-dark d-flex align-items-center"
                       asp-page="./ExternalLogins">
                        <i class="bi bi-box-arrow-in-right me-2"></i> Liên kết bên ngoài
                    </a>
                </li>
            }
            <li>
                <a class="nav-link px-3 py-2 rounded @ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext) text-dark d-flex align-items-center"
                   asp-page="./TwoFactorAuthentication">
                    <i class="bi bi-shield-lock-fill me-2"></i> Xác thực 2 lớp
                </a>
            </li>
            <li>
                <a class="nav-link px-3 py-2 rounded @ManageNavPages.PersonalDataNavClass(ViewContext) text-dark d-flex align-items-center"
                   asp-page="./PersonalData">
                    <i class="bi bi-folder-lock2 me-2"></i> Dữ liệu cá nhân
                </a>
            </li>
        </ul>
    </div>
</div>
<style>
    .nav-link:hover {
        background-color: #f0f8ff;
        font-weight: 500;
    }

    .nav-link.active {
        background-color: #007bff;
        color: #fff !important;
    }

</style>

