@model OnThiLaiXe.Models.MoPhong

@{
    ViewData["Title"] = "Xóa câu hỏi mô phỏng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Xóa câu hỏi mô phỏng</h1>

<div class="alert alert-danger">
    <h4>Bạn có chắc chắn muốn xóa câu hỏi này không?</h4>
    <p>Hành động này không thể hoàn tác.</p>
</div>

<div class="card">
    <div class="card-header bg-danger text-white">
        <h4>Chi tiết câu hỏi #@Model.Id</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Order)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Order)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.NoiDung)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NoiDung)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.VideoUrl)
            </dt>
            <dd class="col-sm-10">
                @if (!string.IsNullOrEmpty(Model.VideoUrl))
                {
                    <a href="@Model.VideoUrl" target="_blank">@Model.VideoUrl</a>
                }
                else
                {
                    <span>Không có video</span>
                }
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DapAn)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DapAn)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Xác nhận xóa" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
        </form>
    </div>
</div>