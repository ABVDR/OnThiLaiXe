@model OnThiLaiXe.Models.BaiSaHinh
@{
    ViewData["Title"] = "Chi tiết bài sa hình";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    .container {
        margin-top: 30px;
        background-color: #fff;
        padding: 25px;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
    }

    .dl-horizontal dt {
        font-weight: 600;
        color: #333;
    }

    .dl-horizontal dd {
        margin-bottom: 15px;
        color: #555;
    }

    .content-box {
        background-color: #f8f9fa;
        padding: 15px;
        border-radius: 5px;
        border: 1px solid #e9ecef;
    }
</style>

<div class="container">
    <h2 class="mb-4 text-primary">
        <i class="fas fa-info-circle"></i> Chi tiết bài sa hình
    </h2>

    <div class="card">
        <div class="card-body">
            <dl class="dl-horizontal row">
                <dt class="col-sm-3">Tên bài:</dt>
                <dd class="col-sm-9"><strong>Bài @Model.Order: @Model.TenBai</strong></dd>

                <dt class="col-sm-3">Thứ tự:</dt>
                <dd class="col-sm-9">@Model.Order</dd>

                <dt class="col-sm-3">Nội dung:</dt>
                <dd class="col-sm-9">
                    <div class="content-box">
                        @Html.Raw(Model.NoiDung)
                    </div>
                </dd>

                <dt class="col-sm-3">Loại bằng lái:</dt>
                <dd class="col-sm-9">@Model.LoaiBangLai?.TenLoai</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Index" asp-route-loaiBangLaiId="@Model.LoaiBangLaiId" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Quay lại
        </a>
    </div>
</div>

<!-- Thêm Font Awesome để dùng icon (nếu chưa có trong _Layout.cshtml) -->
@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}